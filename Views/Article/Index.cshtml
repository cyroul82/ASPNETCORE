@model IEnumerable<ArticleViewModel>

<div class="row mb-2">
<a asp-controller="Article"
   asp-action="Add" class="btn btn-sm btn-primary">Ajouter</a>
</div>

<div class="row">
    @foreach(var article in Model){
        <div class="card col-sm-4">
            <img class="card-img-top" src="@article.ImagePath" alt="">
            <div class="card-body">
                <h5 class="card-title">
                    @article.Name
                </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a asp-controller="Article"
                   asp-action="Detail" asp-route-id="@article.Id">View</a>
                @*<a asp-controller="Article"
                asp-action="Delete" asp-route-id="@article.Id">Delete</a>*@
                <button onclick="onDelete(@article.Id)">Delete</button>
            </div>
        </div>        
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        function onDelete(id) {
            if (id) {
                bootbox.confirm({
                    message: "This is a confirm with custom button text and color! Do you like it?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        console.log('This was logged in the callback: ' + result);
                    }
                });
            }
        };
    </script>
}